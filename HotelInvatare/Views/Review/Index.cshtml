@model IEnumerable<HotelInvatare.Model.ReviewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Aprecieri</h2>


<div style="margin-left: 0%; padding: 2% 2% 2% 0">
    @Html.ActionLink("Adauga Apreciere", "Adauga", "Review", new { @class= "btn btn-primary" })
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Opinie)
        </th>
        <th>
            Stele
        </th>
        @*<th></th>*@
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Opinie)
            </td>
            <td>
                <div style="color: gold;">
                    @{
                        string stelute = "";
                        for (int i = 0; i < item.Nota; i++)
                        {
                            stelute += "★";
                        }}
                    @stelute
                </div>
                @*@Html.DisplayFor(modelItem => item.Nota)*@
            </td>
